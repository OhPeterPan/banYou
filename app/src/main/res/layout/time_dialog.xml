<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#44000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/shape_show_time_bg"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/rgDefaultTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:padding="12dp">

            <RadioButton
                android:id="@+id/rbNowDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@drawable/shape_login_button"
                android:button="@null"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingBottom="9dp"
                android:paddingTop="9dp"
                android:text="今天"
                android:textColor="#4c4b50"
                android:textSize="13sp" />

            <RadioButton
                android:id="@+id/rbOneWeek"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@drawable/shape_login_button"
                android:button="@null"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingBottom="9dp"
                android:paddingTop="9dp"
                android:text="近7天"
                android:textColor="#4c4b50"
                android:textSize="13sp" />

            <RadioButton
                android:id="@+id/rbOneMonth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_login_button"
                android:button="@null"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingBottom="9dp"
                android:paddingTop="9dp"
                android:text="近30天"
                android:textColor="#4c4b50"
                android:textSize="13sp" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/shape_gray_frame"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自定义月(间隔不可超过6个月)"
                android:textColor="#1e1e1e"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="#eee" />

            <TextView
                android:id="@+id/tvStartTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape_login_bg"
                android:drawableRight="@mipmap/ic_right_allow"
                android:gravity="center_vertical"
                android:hint="开始时间"
                android:padding="9dp"
                android:textColor="#5a565b"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvEndTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape_login_bg"
                android:drawableRight="@mipmap/ic_right_allow"
                android:gravity="center_vertical"
                android:hint="结束时间"
                android:padding="9dp"
                android:textColor="#5a565b"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/tvConfirmTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:background="@drawable/shape_login_button"
                android:button="@null"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingBottom="9dp"
                android:paddingTop="9dp"
                android:text="确定"
                android:textColor="#4c4b50"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:background="@drawable/shape_login_button"
                android:button="@null"
                android:gravity="center"
                android:includeFontPadding="false"
                android:paddingBottom="9dp"
                android:paddingTop="9dp"
                android:text="取消"
                android:textColor="#4c4b50"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
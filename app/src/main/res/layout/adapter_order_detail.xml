<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvOrderAdapterStoreName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:textColor="@color/order_detail_text_color"
        android:textSize="@dimen/order_detail_text_size"
        tools:text="门店" />

    <TextView
        android:id="@+id/tvOrderAdapterPayMoney"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:textColor="@color/order_detail_text_color"
        android:textSize="@dimen/order_detail_text_size"
        tools:text="支付金额" />

    <TextView
        android:id="@+id/tvOrderAdapterPayType"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:textColor="@color/order_detail_text_color"
        android:textSize="@dimen/order_detail_text_size"
        tools:text="支付方式" />

    <TextView
        android:id="@+id/tvOrderAdapterPayTime"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:textColor="@color/order_detail_text_color"
        android:textSize="@dimen/order_detail_text_size"
        tools:text="支付时间" />

    <TextView
        android:id="@+id/tvOrderAdapterOperatePerson"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:textColor="@color/order_detail_text_color"
        android:textSize="@dimen/order_detail_text_size"
        tools:text="操作人" />
</LinearLayout>
